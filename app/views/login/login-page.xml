<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
    <Page.actionBar>
        <ActionBar title="Cycling Tracker">
          <ActionBar.titleView>
            <StackLayout orientation="horizontal" ios:horizontalAlignment="center" android:horizontalAlignment="left">
              <Label text="Login"  class="action-label"/>
            </StackLayout>
          </ActionBar.titleView>  
        </ActionBar>
    </Page.actionBar>
        <StackLayout orientation="vertical">
            <Image src="~/images/logo.png" class="logo" />
            <TextField hint="Username" text=" {{ username }}"  id="usernameTextField"/>
            <TextField hint="Password" text="{{ password }}" secure="true"  id="passwordTextField"/>
            <Button text="Login" tap="tapLogin" class="loginButton"/>
            <Button text="Register" tap="goToRegister" class="registerButton" />
        </StackLayout>
</Page>
