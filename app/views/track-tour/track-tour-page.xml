<Page xmlns="http://www.nativescript.org/tns.xsd" xmlns:drawer="nativescript-telerik-ui/sidedrawer" loaded="onLoaded">
 	<Page.actionBar>
  	<ActionBar title="Cycling Tracker">
      <ActionBar.titleView>
        <StackLayout orientation="horizontal" ios:horizontalAlignment="center" android:horizontalAlignment="left">
          <Image src="res://icon" class="action-image"/>
          <Label text="Cycling Tracker"  class="action-label"/>
        </StackLayout>
      </ActionBar.titleView>  
    </ActionBar>
  	</Page.actionBar>
 	<drawer:RadSideDrawer>
  		<drawer:rad-side-drawer.drawerTransition>
        	<drawer:PushTransition />
    	</drawer:rad-side-drawer.drawerTransition>
   		<drawer:RadSideDrawer.mainContent>
	      <ScrollView>
          <StackLayout>
  				  <Button text="Start monitoring" tap="buttonStartTap" id="btnStart"/>
  				  <Button text="Stop monitoring" tap="buttonStopTap" id="btnStop"/>
            <GridLayout rows="auto" columns="auto, auto">
                <Label row="0" col="0" text="{{ 'Distance: ' + distance + ' meters' }}"/>
                <Label row="0" col="1" text="{{ 'Speed: ' + speed + ' m/s' }}"/>
            </GridLayout>  				  
      		  <Label text="{{ time }}" />
      		  <ListView items="{{ locations }}">
  				  	<ListView.itemTemplate>
  				  		<Label text="{{ 'Current location: ' + latitude + ', ' + longitude }}" />
  				  	</ListView.itemTemplate>
  				  </ListView>
            <Image id="myImg" />
            <TextField text="{{ name }}" hint="Tour name" id="nameTextField"/>
            <GridLayout columns="2*, 3*">
              <Button col="0" text="Save" tap="saveTrack" id="btnSave"/>
              <Button col="1" text="Save and Share" tap="shareTrack" id="btnShare"/>
            </GridLayout>                    
   			  </StackLayout>
        </ScrollView>
    	</drawer:RadSideDrawer.mainContent>
    	<drawer:RadSideDrawer.drawerContent>
      	<StackLayout>
          <Button text="Track" tap="tapTrack" />
          <Button text="Profile" tap="tapProfile" />
          <Button text="Shared tracks" tap="tapShared" />
     		</StackLayout>
    	</drawer:RadSideDrawer.drawerContent>
  </drawer:RadSideDrawer>
</Page>