<Page xmlns="http://www.nativescript.org/tns.xsd" xmlns:drawer="nativescript-telerik-ui/sidedrawer" loaded="onLoaded">
 	<Page.actionBar>
  	<ActionBar title="Cycling Tracker">
      <ActionBar.titleView>
        <StackLayout orientation="horizontal" ios:horizontalAlignment="center" android:horizontalAlignment="left">
          <Image src="res://icon" class="action-image"/>
          <Label text="Cycling Tracker"  class="action-label"/>
        </StackLayout>
      </ActionBar.titleView>  
    </ActionBar>
  	</Page.actionBar>
 	<drawer:RadSideDrawer>
  		<drawer:rad-side-drawer.drawerTransition>
        	<drawer:PushTransition />
    	</drawer:rad-side-drawer.drawerTransition>
   		<drawer:RadSideDrawer.mainContent>
	      <ScrollView>
          <GridLayout rows="auto, auto, auto, auto, auto, auto, auto, auto">
  				  <Button row="0" text="start monitoring" tap="buttonStartTap" id="btnStart"/>
  				  <Button row="1" text="stop monitoring" tap="buttonStopTap" id="btnStop"/>
  				  <Label row="2" text="{{ 'Distance: ' + distance + ' meters' }}"/>
      		  <Label row="3" text="{{ 'Speed: ' + speed + ' m/s' }}"/>
      		  <Label row="4" text="{{ time }}" />
      		  <ListView row="5" items="{{ locations }}">
  				  	<ListView.itemTemplate>
  				  		<Label text="{{ $value, 'Current location: ' + latitude + ', ' + longitude }}" />
  				  	</ListView.itemTemplate>
  				  </ListView>
            <Image id="myImg" row="6"/>
            <StackLayout row="7" orientation="horizontal">
              <Button text="Save" tap="saveTrack" id="btnSave"/>
              <Button text="Save and Share" tap="shareTrack" id="btnShare"/>
            </StackLayout>
   			  </GridLayout>
        </ScrollView>
    	</drawer:RadSideDrawer.mainContent>
    	<drawer:RadSideDrawer.drawerContent>
      	<StackLayout>
          <Button text="Track" tap="tapTrack" />
          <Button text="Profile" tap="tapProfile" />
          <Button text="Shared tracks" tap="tapShared" />
     		</StackLayout>
    	</drawer:RadSideDrawer.drawerContent>
  </drawer:RadSideDrawer>
</Page>